{
  "name": "pouchdb-adapter-cordova-sqlite",
  "version": "7.5.0",
  "description": "PouchDB adapter using Cordova SQLite Plugin as its data store.",
  "keywords": [],
  "author": "Dale Harvey <dale@arandomurl.com>",
  "license": "Apache-2.0",
  "repository": "https://github.com/nolanlawson/pouchdb-adapter-cordova-sqlite",
  "main": "lib/index.js",
  "jsnext:main": "lib/index.es.js",
  "module": "lib/index.es.js",
  "browser": "lib/index.browser.js",
  "types": "types/index.d.ts",
  "files": [
    "compiled",
    "dist",
    "docs",
    "lib",
    "src",
    "types"
  ],
  "brVars": {
    "name": "PouchAdapterCordovaSqlite",
    "package": "pouchdb.adapter.cordova.sqlite"
  },
  "scripts": {
    "clean": "rimraf lib/* dist/* compiled/* && mkdirp lib dist compiled",
    "compile": "tsc -p ./tsconfig.json",
    "rollup-cjs": "rollup -c config/rollup.config.cjs.js && rollup -c config/rollup.config.browser.cjs.js",
    "rollup-es": "rollup -c config/rollup.config.es.js && rollup -c config/rollup.config.browser.es.js",
    "rollup": "npm-run-all --parallel rollup-cjs rollup-es",
    "browserify:rollup": "browserify -t [ babelify --global --presets [ @babel/preset-env ] ] -t brfs -p bundle-collapser/plugin -s $npm_package_brVars_name lib/index.browser.js > dist/$npm_package_brVars_package.js",
    "browserify": "npm run browserify:rollup",
    "minify": "uglifyjs -mc < dist/$npm_package_brVars_package.js > dist/$npm_package_brVars_package.min.js",
    "build:prod": "npm-run-all clean rollup browserify minify",
    "build:dev": "npm-run-all clean rollup browserify",
    "build": "npm run build:prod",
    "prepublishOnly": "npm run build",
    "lint": "eslint bin/ src/ test/",
    "dev": "npm run test-local",
    "test": "npm run rollup-cjs && node bin/run-test.js",
    "test-local": "cross-env CLIENT=local npm run test",
    "test-node": "cross-env CLIENT=node TEST_DB=testdb,http://localhost:5984/testdb npm run test",
    "test-browser": "cross-env CLIENT=ChromeHeadless npm run test",
    "test-types": "tsc --noEmit -p types",
    "release": "standard-version"
  },
  "dependencies": {
    "pouchdb-adapter-websql-core": "../lib/pouchdb-adapter-websql-core-7.5.0.tgz"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/register": "^7.0.0-rc.1",
    "@types/debug": "^4.1.1",
    "@types/node-fetch": "^2.1.6",
    "@types/pouchdb": "^6.3.3",
    "@types/pouchdb-core": "^7.0.2",
    "@types/pouchdb-find": "^6.3.4",
    "@types/pouchdb-replication": "^6.4.2",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "add-cors-to-couchdb": "0.0.6",
    "babelify": "^10.0.0",
    "brfs": "^2.0.1",
    "browserify": "^16.2.3",
    "bundle-collapser": "^1.3.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^5.2.0",
    "es3ify": "^0.2.2",
    "es6-promise": "^4.2.6",
    "eslint": "^8.21.0",
    "istanbul": "^0.4.5",
    "jshint": "^2.10.1",
    "karma": "^4.0.0",
    "karma-browserify": "^6.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sauce-launcher": "^2.0.2",
    "mkdirp": "^0.5.1",
    "mocha": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "promise-polyfill": "^8.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.2.1",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-inject": "^2.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-typescript2": "^0.19.2",
    "standard-version": "^5.0.0",
    "tslib": "^1.9.3",
    "typescript": "^3.2.2",
    "uglify-js": "^3.4.9",
    "watchify": "^3.11.0",
    "whatwg-fetch": "^3.0.0",
    "zuul": "^3.12.0"
  },
  "scriptsComments": {
    "prepublish": "npm run build",
    "build": "mkdirp dist && browserify -s PouchAdapterCordovaSqlite -p bundle-collapser/plugin . > dist/pouchdb.cordova-sqlite.js && uglifyjs -mc < dist/pouchdb.cordova-sqlite.js > dist/pouchdb.cordova-sqlite.min.js",
    "test": "standard"
  },
  "dependenciesComments": {
    "pouchdb-adapter-websql-core": "^7.0.0"
  },
  "devDependenciesComments": {
    "browserify": "^14.0.0",
    "bundle-collapser": "^1.2.1",
    "mkdirp": "^0.5.1",
    "standard": "^7.1.2",
    "uglify-js": "^2.7.0"
  }
}
